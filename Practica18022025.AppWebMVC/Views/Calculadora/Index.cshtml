@{
}
@{
    ViewData["Title"] = "Calculadora";
}

<h1>Calculadora</h1>
<hr />
<form asp-action="Calcular">
    <div class="row">      
        <div class="form-group col-6">
            <label  class="control-label">Operaciones</label>
            <select name="op" class="form-control">
                <option value="1">Suma</option>
                <option value="2">Resta</option>
                <option value="3">Multiplicacion</option>
                <option value="4">Division</option>
            </select>                
        </div>       
    </div>  
    <div class="row">
        <div class="form-group col-6">
            <label class="control-label">Numero 1</label>
            <input type="number" class="form-control" name="num1" value="@ViewBag.num1" />
        </div>
        <div class="form-group col-6">
            <label class="control-label">Numero 2</label>
            <input type="number" class="form-control" name="num2" value="@ViewBag.num2" />
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label class="control-label">Resultado</label>
            <input type="number" class="form-control" value="@ViewBag.resultado" disabled />
        </div>      
    </div>
    <div class="form-group">
        <input type="submit" value="Calcular" class="btn btn-primary" />
    </div>
</form>
